<div class="card my-5">
    <h5 class="card-header" style="background-color: rgb(104, 4, 4); color: white;">
        {{blogPostData.post_title}}</h5>
    <p5 class="card-header" style="background-color: rgb(165, 28, 28); color: white;">Posted by
        {{blogPostData.user.name}} on
        {{format_date
        blogPostData.created_date}}</p5>
    <div class="card-body">
        {{!-- <h5 class="card-title">Special title treatment</h5> --}}
        <p class="card-text">{{blogPostData.contents}}</p>
        {{!-- <a href="#" class="btn btn-primary">Go somewhere</a> --}}
    </div>
</div>

<div class="card my-5">
    <h5 class="card-header">Comments:</h5>
    <div class="card-body">

        <p>Comment Test</p>
        <p>Posted by: on: </p>
    </div>
</div>


{{#if logged_in}}

<div class="card mt-5">
    <div class="card-header">
        Add a comment
    </div>
    <div class="card-body">
        <form>
            <div class="form-group">
                <label for="content">Content :</label>
                <textarea type="text" class="form-control" id="content" placeholder="Enter content" name="content"
                    rows="2"></textarea>
            </div>
            <button type="submit" class="btn btn-secondary" href="/dashboard">Submit Comment</button>
        </form>
    </div>
</div>

{{else}}

<div>
    <p>You are required to login to be able to post comments on blogPosts. The button below will redirect you to the
        login page</p>
    <div class="justify-content-center align-items-end mb-5 pb-5">
        <a href="/login" class="btn btn-primary btn-lg">Login/Sign Up</a>
    </div>
</div>

{{/if}}