{{#each blogPostData}}
<a href="/blogPost/{{id}}" class="card-link py-5">
    <div class="card" href="/blogPost">
        <h5 class="card-header" style="background-color: rgb(104, 4, 4); color: white;">{{post_title}}</h5>
        <p class="card-header" style="background-color: rgb(165, 28, 28); color: white;">Created by {{user.name}} on
            {{format_date created_date}}</p>
        <div class="card-body">
            {{!-- <h5 class="card-title">Special title treatment</h5> --}}
            <p class="card-text" style="color: black;">{{contents}}</p>
            {{!-- <a href="#" class="btn btn-primary">Go somewhere</a> --}}
        </div>
    </div>
</a>
{{/each}}