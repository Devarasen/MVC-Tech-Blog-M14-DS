<h1 class="p-4">Welcome {{name}}</h1>

{{#each blogPosts}}
<div class="card my-5" id="togglePosts">
    <h5 class="card-header">{{this.post_title}}</h5>
    <p class="card-header">Posted by {{name}} on {{format_date this.created_date}}</p>
    <div class="card-body">
        {{!-- <h5 class="card-title">Special title treatment</h5> --}}
        <p class="card-text">{{this.contents}}</p>
        {{!-- <a href="#" class="btn btn-primary">Go somewhere</a> --}}
    </div>
</div>
{{/each}}


<div class="container mt-5 d-none" id="myForm">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    Create New Post
                </div>
                <div class="card-body">
                    <form>
                        <div class="form-group">
                            <label for="title">Title :</label>
                            <input type="text" class="form-control" id="title" placeholder="Enter blog title"
                                name="title">
                        </div>
                        <div class="form-group">
                            <label for="content">Content :</label>
                            <textarea type="text" class="form-control" id="content" placeholder="Enter content"
                                name="content" rows="3"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary" href="/dashboard">Create Post</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/createPost.js"></script>
</div>


<div class="fixed-bottom d-flex justify-content-center align-items-end mb-5 pb-5">
    <button id="toggleForm" class="btn btn-primary btn-lg">+ New Post</button>
    <script src="/js/newPostButton.js"></script>
</div>