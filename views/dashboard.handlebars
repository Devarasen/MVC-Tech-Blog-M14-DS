<div>
    <div>
        <h1>Welcome {{name}},</h1>
    </div>

    {{#each blogPosts}}

    <div class="card my-5 togglePosts">
        <div class="d-flex justify-content-between" style="background-color: rgb(104, 4, 4);">
            <h5 class=" card-header" style="background-color: rgb(104, 4, 4); color: white;">{{this.post_title}}</h5>
            <div>
                <button class="btn btn-secondary" onclick="editPost('{{this.id}}')">Edit</button>
                <button class="btn btn-danger mx-2" onclick="deletePost('{{this.id}}')">Delete</button>
            </div>
        </div>
        <p class="card-header" style="background-color: rgb(165, 28, 28); color: white;">Posted by {{../name}} on
            {{format_date this.created_date}}</p>
        <div class="card-body">
            {{!-- <h5 class="card-title">Special title treatment</h5> --}}
            <p class="card-text my-4">{{this.contents}}</p>


            <textarea type="text" class="form-control d-none" id="content-update" placeholder="Enter content"
                name="content-update" rows="3">{{this.contents}}</textarea>
            <div class="py-3">
                <button type="submit" class="btn btn-secondary mx-2 d-none">Confirm Edit</button>
                <button type="submit" class="btn btn-danger mx-2 d-none">Confirm Delete</button>
                <button type="submit" class="btn btn-success mx-2 d-none">Back</button>
            </div>

        </div>
    </div>

    {{/each}}

    {{!-- code for modal --}}
    {{> modal}}


    {{!-- Create New BlogPost form --}}
    <div class="container mt-5 d-none" id="myForm">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card">
                    <div class="card-header">
                        Create New Post
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="form-group">
                                <label for="title">Title :</label>
                                <input type="text" class="form-control" id="title" placeholder="Enter blog title"
                                    name="title">
                            </div>
                            <div class="form-group">
                                <label for="content">Content :</label>
                                <textarea type="text" class="form-control" id="content" placeholder="Enter content"
                                    name="content" rows="3"></textarea>
                            </div>
                            <button type="submit" class="btn btn-secondary" href="/dashboard">Create Post</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>

    {{!-- +New Post/Back Buton --}}
    <div class="container-fluid p-5">
        <div class="row justify-content-center">
            <div class="col-12 d-flex justify-content-center mt-md-0 mt-4">
                <button id="toggleForm" class="btn btn-dark btn-lg">+ New Post</button>
            </div>
        </div>
    </div>

    <script src="/js/createPost.js" defer></script>
    <script src="/js/newPostButton.js" defer></script>
</div>