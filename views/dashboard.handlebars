<div class="container mt-5 d-none" id="myForm">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    Create New Post
                </div>
                <div class="card-body">
                    <form>
                        <div class="form-group">
                            <label for="name">Title:</label>
                            <input type="text" class="form-control" id="name" placeholder="Enter Full Name" name="name">
                        </div>
                        <div class="form-group">
                            <label for="email">Content:</label>
                            <textarea type="email" class="form-control" id="content" placeholder="Enter content"
                                name="content" rows="3"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Create Post</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="fixed-bottom d-flex justify-content-center align-items-end mb-5 pb-5">
    <button id="toggleForm" class="btn btn-primary btn-lg">+ New Post</button>
    <script src="/js/newPost.js"></script>
</div>