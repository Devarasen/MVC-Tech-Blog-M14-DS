<div class="container p-5">
    <div class="row justify-content-between align-items-center pb-5">

        <div class="col-md-5 pb-5 mb-5">
            <h1 class="pb-4">Login :</h1>
            <form class="login-form" id="email-login-form">
                <div class="form-group">
                    <label for="email-login">Email</label>
                    <input type="email" class="form-control" id="email-login" name="email-login" required>
                </div>
                <div class="form-group">
                    <label for="password-login">Password</label>
                    <input type="password" class="form-control" id="password-login" name="password" required>
                </div>
                <button type="submit" class="btn btn-dark">Login</button>
            </form>
        </div>

        {{!-- code for modals --}}
        {{> successModal}}
        {{> errorModal}}

        <div class="col-md-5">
            <h1 class="pb-4">Sign Up :</h1>
            <form class="signup-form" id="email-signup-form">

                <div class="form-group">
                    <label for="name-signup">Name</label>
                    <input type="text" class="form-control" id="name-signup" name="name-signup" required>
                </div>

                <div class="form-group">
                    <label for="email-signup">Email</label>
                    <input type="email" class="form-control" id="email-signup" name="email-signup" required>
                </div>

                <div class="form-group">
                    <label for="password-signup">Password</label>
                    <input type="password" class="form-control" id="password-signup" name="password-signup" required>
                </div>
                <button type="submit" class="btn btn-dark">Sign Up</button>
            </form>
        </div>

    </div>

</div>
<script src="/js/login.js" defer></script>