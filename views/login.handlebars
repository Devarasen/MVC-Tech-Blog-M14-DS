<div class="container p-5">
    <div class="row justify-content-start align-items-center pb-5">
        <div class="col-md-6">
            <h1>Login</h1>
            <form class="login-form" id="email-login-form">
                <div class="form-group">
                    <label for="email-login">Email</label>
                    <input type="email" class="form-control" id="email-login" name="email-login" required>
                </div>
                <div class="form-group">
                    <label for="password-login">Password</label>
                    <input type="password" class="form-control" id="password-login" name="password" required>
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>
    </div>
    <script src="/js/login.js"></script>
</div>